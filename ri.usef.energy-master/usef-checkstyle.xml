	editor -->
<!-- Checkstyle-Configuration: USEF Description: USEF checkstyle -->
<module name="Checker">
	<property name="charset" value="UTF-8"/>
	<property name="severity" value="warning" />
	<module name="TreeWalker">
		<module name="JavadocMethod"/><!-- non-filled and missing at-clauses will be reported -->
		<module name="JavadocType" />
		<module name="JavadocVariable" />
